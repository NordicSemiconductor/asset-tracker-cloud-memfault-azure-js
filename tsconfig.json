{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "lib": ["es2019"],
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "outDir": "./dist"
  }
}
